#include <stdio.h>

int main() {
    FILE *source, *target;
    char ch;
    
    source = fopen("input.txt", "r");
    target = fopen("output.txt", "w");

    if (source == NULL || target == NULL) {
        printf("Error opening file.\n");
        return 1;
    }

    while ((ch = fgetc(source)) != EOF) {
        fputc(ch, target);
    }

    printf("File copied successfully!\n");

    fclose(source);
    fclose(target);

    return 0;
}
  
